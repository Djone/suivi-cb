.home-container {
  padding: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.home-container h1 {
  color: #343a40;
  margin-bottom: 30px;
  font-size: 2rem;
  font-weight: 600;
}

/* Grille des comptes */
.accounts-grid {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.account-section h2 {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 2px solid currentColor;
}

/* Container pour les deux cartes de solde */
.balance-cards-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 20px;
}

/* Carte de solde */
.balance-card {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 12px;
  padding: 25px 30px;
  box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.balance-card.clickable {
  cursor: pointer;
}

.balance-card.clickable:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(79, 172, 254, 0.4);
}

.click-hint {
  color: rgba(255, 255, 255, 0.75);
  font-size: 0.75rem;
  text-align: center;
  margin-top: 10px;
  font-style: italic;
}

.balance-header {
  margin-bottom: 15px;
}

.balance-header h3 {
  color: white;
  font-size: 1.2rem;
  font-weight: 600;
  margin: 0 0 5px 0;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.balance-header .subtitle {
  display: block;
  color: rgba(255, 255, 255, 0.85);
  font-size: 0.85rem;
  font-style: italic;
}

.balance-amount-large {
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
  margin: 15px 0;
  text-align: center;
}

.balance-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15px;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  margin-top: 15px;
}

.detail-label {
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.9rem;
  font-weight: 500;
}

.detail-value {
  color: white;
  font-size: 1.1rem;
  font-weight: 600;
}

.negative {
  color: #dc3545;
}

.positive {
  color: #28a745;
}

.no-data {
  padding: 60px 40px;
  text-align: center;
  color: #6c757d;
  font-style: italic;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Responsive */
@media (max-width: 768px) {
  .balance-cards-container {
    grid-template-columns: 1fr;
    gap: 15px;
  }

  .balance-amount-large {
    font-size: 2rem;
  }

  .home-container h1 {
    font-size: 1.5rem;
  }

  .account-section h2 {
    font-size: 1.2rem;
  }
}
